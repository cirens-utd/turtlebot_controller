<?xml version="1.0"?>
<model>

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <link name="base_link">
    </link>

    <link name="chassis">
        <visual>
            <origin xyz="0.170 0 0.1"/>
            <geometry>
                <cylinder radius="0.170" length="0.2"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.170 0 0.1"/>
            <geometry>
                <cylinder radius="0.170" length="0.2"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="3.9" length="0.170" radius="0.2">
            <origin xyz="0.170 0 0.1" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.045" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.045" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.045">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.045" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.045" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.045">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.045"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.045"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.045">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.170 0 0"/>
    </joint>

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="-0.06 0.1 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="-0.06 -0.1 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.295 0 0"/>
    </joint>

    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>

    <gazebo reference="left_wheel">
        <material>Gazebo/Blue</material>
        <collision>
            <surface>
                <friction>
                    <ode>
                        <mu>0.5</mu>
                        <mu2>0.5</mu2> 
                    </ode>
                </friction>
            </surface>
        </collision>
    </gazebo>

    <gazebo reference="right_wheel">
        <material>Gazebo/Blue</material>
        <collision>
            <surface>
                <friction>
                    <ode>
                        <mu>0.5</mu>
                        <mu2>0.5</mu2> 
                    </ode>
                </friction>
            </surface>
        </collision>
    </gazebo>
    
    <gazebo reference="caster_wheel">
        <material>Gazebo/Blue</material>
        <collision>
            <surface>
                <friction>
                    <ode>
                        <mu>0.001</mu> <!-- value range 0.0 to 1.0 -->
                        <mu2>0.001</mu2> <!-- value range 0.0 to 1.0 -->
                    </ode>
                </friction>
            </surface>
        </collision>
        <!-- <mu1 value="0.001"/>
        <mu2 value="0.001"/> -->
    </gazebo>
</model>